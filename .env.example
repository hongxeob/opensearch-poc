# =====================================================
# Spring Profile
# =====================================================
SPRING_PROFILES_ACTIVE=local

# =====================================================
# Service
# =====================================================
SERVICE_NAME=zelda-product-kotlin
SERVICE_PORT=8081

# =====================================================
# Database (PostgreSQL) - Read/Write
# =====================================================
DB_RW_HOST=localhost
DB_RW_PORT=5432
DB_RW_USER=master
DB_RW_PASSWORD=password
DB_RW_DBNAME=zelda
DB_RW_SSL_MODE=disable

# Database (PostgreSQL) - Read Only
DB_RO_HOST=localhost
DB_RO_PORT=5432
DB_RO_USER=master
DB_RO_PASSWORD=password
DB_RO_DBNAME=zelda
DB_RO_SSL_MODE=disable

# =====================================================
# Redis
# =====================================================
REDIS_ENABLED=false
REDIS_READ_HOST=localhost
REDIS_READ_PORT=6379
REDIS_READ_PASSWORD=
REDIS_READ_ENABLE_TLS=false
REDIS_WRITE_HOST=localhost
REDIS_WRITE_PORT=6379
REDIS_WRITE_PASSWORD=
REDIS_WRITE_ENABLE_TLS=false

# =====================================================
# Kafka
# =====================================================
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_NAME=zelda-product-kotlin
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SECURITY_MECHANISM=SCRAM-SHA-512
KAFKA_SECURITY_USERNAME=
KAFKA_SECURITY_PASSWORD=

# =====================================================
# OpenSearch
# =====================================================
OPENSEARCH_ADDRESS=http://localhost:9200
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=
OPENSEARCH_INDEX_PRODUCTS=zelda-products
OPENSEARCH_INDEX_SELLERS=zelda-sellers

# =====================================================
# AWS (MSK IAM 인증 시 필요)
# =====================================================
AWS_REGION=ap-northeast-1

# =====================================================
# Logging
# =====================================================
LOGGER_LEVEL=DEBUG
